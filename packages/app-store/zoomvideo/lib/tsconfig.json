{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom", "es2016", "es2017", "es2018", "esnext"],
    "types": ["vitest/globals", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@calcom/*": ["../../../packages/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "vitest.config.ts", "vitest.setup.ts"],
  "exclude": ["node_modules", "coverage"]
}
