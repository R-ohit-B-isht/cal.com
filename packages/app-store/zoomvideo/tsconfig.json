{
  "extends": "@calcom/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "@calcom/*": ["../../*"]
    },
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
